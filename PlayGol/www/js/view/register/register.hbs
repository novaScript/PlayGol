<div class="page-content ">
    <form id="frmRegister" class="list-block">
        <ul>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-ios7-football-outline"></i></div>
                    <div class="item-inner">
                        <div class="item-input">
                            <input name="primer_nom" type="text" placeholder="{{idioma.name_placeholder}}" >
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-ios7-football-outline"></i></div>
                    <div class="item-inner">
                        <div class="item-input">
                            <input name="primer_ape" type="text" placeholder="{{idioma.last_name_placeholder}}">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-ios7-calendar-outline"></i></div>
                    <div class="item-inner">
                        <div class="item-input">
                            <input name="fecha_nacimiento" type="date" placeholder="{{idioma.birthday_placeholder}}">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-male"></i></div>
                    <div class="item-inner">
                        <div class="item-input">
                            <select name="cod_genero" id="cod_genero">
                                <option value="M">{{idioma.male_placeholder}}</option>
                                <option value="F">{{idioma.famale_placeholder}}</option>
                            </select>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </form>
</div>